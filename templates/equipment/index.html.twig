{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4">Liste des équipements</h1>
    <div class="container mx-auto">
        <table class="min-w-full bg-white border border-gray-200" id="myTable">
            <thead>
                <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                    <th class="py-3 px-6 text-left">Nom</th>
                    <th class="py-3 px-6 text-left">Catégorie</th>
                    <th class="py-3 px-6 text-left">Prix</th>
                    <th class="py-3 px-6 text-left">Emplacement</th>
                    <th class="py-3 px-6 text-left">État</th>
                    <th class="py-3 px-6 text-left">Disponibilité</th>
                </tr>
            </thead>
            <tbody class="text-gray-600 text-sm font-light">
            {% for equipment in equipments %}
                <tr class="border-b border-gray-200 hover:bg-gray-100">
                    <td class="py-3 px-6 font-bold text-dark-600">{{ equipment.name }}</td>
                    <td class="py-3 px-6">{{ equipment.category.name }}</td>
                    <td class="py-3 px-6">{{ equipment.price|number_format(2, '.', ',') }} €</td>
                    <td class="py-3 px-6">{{ equipment.location.aisle ~ ' - ' ~ equipment.location.shelf }}</td>
                    <td class="py-3 px-6">{{ equipment.stat.name }}</td>
                    <td class="py-3 px-6">
                        {% if equipment.isAvailable %}
                            <span class="text-green-600">Disponible</span>
                        {% else %}
                            <span class="text-red-600">Non disponible</span>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/2.1.8/js/dataTables.js"></script>
    <script>
        $(document).ready(function() {
            $('#myTable').DataTable();
        });
    </script>
{% endblock %}
